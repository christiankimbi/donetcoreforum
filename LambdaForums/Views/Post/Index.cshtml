@model LambdaForums.Models.Post.PostIndexModel

<h2>@Model.Title</h2>

<div>
    <h3>Author: @Model.AuthorName (@Model.AuthorRating)</h3>
    <h5>Created:  @Model.Created</h5>
</div>

<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any())
{
    foreach (var reply in Model.Replies)
    {
        <div>

            <div>
                <h3>Reply Author: @reply.AuthorName (@reply.AuthorRating)</h3>
                <h5>Reply Created:  @reply.Created</h5>
            </div>
            <div>
                Reply: @reply.ReplyContent
            </div>

        </div>
    }
}