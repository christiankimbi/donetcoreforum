
@model LambdaForums.Models.Search.SearchResultModel


<div class="container body-content">
    <div class="row sectionHeader">
        <span>Search Results for: "@Model.SearchQuery"</span>
        <div class="sectionHeading">

            <form asp-controller="Search" asp-action="Search" method="post">
                <div class="searchForm">
                    <input asp-for="SearchQuery" type="text" placeholder="Search..." class="searchBar" onfocus="clearThis(this)" />
                    <button type="submit" class="btn btn-forumSearch">
                        <i class="material-icons">search</i>
                    </button>
                </div>
            
            </form>

        </div>

       

    </div>
    <div class="row forumIndexContent">
        @if (!Model.EmptySearchResutls)
        {
            <table class="table table-striped table-hover" id="searchIndexTable">
                <tbody>
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td>
                                <div class="forumLogo" style="background-image: url(@post.Forum.ImageUrl)"></div>
                                    
                                <div class="postData">
                                    <div class="postTitle">
                                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                                            @post.Title
                                        </a>
                                    </div>

                                    <div class="forumSubTitle">
                                        <div>
                                            by:
                                            <span class="postAuthor">
                                                <a asp-controller="Profile" asp-action="Detail" asp-route-id="@post.AuthorId">
                                                    @post.AuthorName
                                                </a>
                                                (@post.AuthorRating)
                                            </span>
                                            

                                            in:
                                            <span class="PostForum">
                                                <a asp-controller="Forum" asp-action="Topic" asp-route-id="@post.Forum.Id">
                                                   @post.Forum.Name
                                                </a>
                                            </span>
                                            on
                                            <span class="postDate">
                                                @post.DatePosted

                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="forumPostCount">
                                    Replies: @post.RepliesCount
                                </div>

                            </td>
                            <td>
                                <div class="postDate">@post.DatePosted</div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="noPost">

                <i class="material-icons md-72">question_answer</i>
                <h3>
                    No Search Results Found For: "@Model.SearchQuery" <br/>
                </h3>
            </div>
        }
    </div>
</div>

@section Scripts{
    <script>
        function clearThis(target) {
            target.value = "";
        }
    </script>
}
